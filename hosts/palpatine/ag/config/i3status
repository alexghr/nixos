general {
  colors = true
  interval = 5
}

order += "ethernet _first_"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"
disk / {
  format = "%avail"
}

ethernet _first_ {
  format_down = "E: down"
  format_up = "E: %ip (%speed)"
}

load {
  format = "%1min"
}

memory {
  format = "%used | %available"
  format_degraded = "MEMORY < %available"
  threshold_degraded = "1G"
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}
